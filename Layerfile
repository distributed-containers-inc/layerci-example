FROM vm/ubuntu:18.04

RUN echo 'this is a layerfile!'
RUN echo 'it is a DSL made for you to be able to write efficient tests!'
RUN sleep 20

WORKDIR /app
COPY . .
RUN cat thefile

RUN sleep 15
RUN [ $(( $RANDOM % 100 )) -lt 50 ]
RUN [ $(( $RANDOM % 100 )) -lt 50 ]

RUN echo 'in total, this test takes about 45 seconds to run.'
